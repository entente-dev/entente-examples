{
  "name": "castle-client",
  "version": "0.1.5",
  "description": "Example consumer service that uses castle-service - demonstrating Entente contract testing",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:worker": "tsc src/worker.ts --outDir dist --target es2022 --module es2022 --moduleResolution bundler --allowSyntheticDefaultImports",
    "dev": "wrangler dev",
    "dev:node": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest run test/**.test.ts",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env development",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:prod": "wrangler deploy --env production",
    "register:service": "entente register-service --spec spec/openapi.json",
    "upload:spec": "entente upload-spec --spec spec/openapi.json",
    "deploy:service": "entente deploy-service --environment development",
    "can-i-deploy": "entente can-i-deploy --environment development",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@entente/consumer": "link:../../../entente/packages/consumer",
    "@entente/fixtures": "link:../../../entente/packages/fixtures",
    "@entente/types": "link:../../../entente/packages/types",
    "@hono/node-server": "^1.13.5",
    "@hono/swagger-ui": "^0.4.1",
    "dotenv": "^17.2.2",
    "graphql": "^16.11.0",
    "graphql-request": "^7.0.0",
    "graphql-yoga": "^5.15.2",
    "hono": "^4.6.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250913.0",
    "@entente/cli": "link:../../../entente/packages/cli",
    "@types/node": "^24.0.0",
    "swagger-ui-dist": "^5.17.14",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "latest"
  },
  "keywords": [
    "entente",
    "contract-testing",
    "example",
    "consumer",
    "hono",
    "client"
  ]
}
